{
  "compilerOptions": {
    "baseUrl": "./",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "NodeNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "nodenext",
    "isolatedModules": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7"
    ],
    "jsx": "react-jsx",
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ] 
}
